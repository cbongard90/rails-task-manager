<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<%= link_to 'Edit the task', task_edit_path(@task) %>
<%= link_to "Delete #{@task.title}", task_delete_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete #{@task.title}"} %>
<%= link_to 'Go back', tasks_path %>
